<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-briefcase mr-4" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        <a target="_blank" class="font-weight-bold" href="https://github.com/TakeshiKatsuro">Click here</a>
        and please subscribe
    </span>
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }
}
